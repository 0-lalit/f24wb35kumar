extends layout
 
block content
  header
    h1= title
  p Query parameters: rows=#{query.rows}, cols=#{query.cols}
  - let rows = Number(query.rows)
  - let cols = Number(query.cols)
  if !Number.isInteger(rows) || !Number.isInteger(cols)
    p Error: Both rows and cols must be integers.
  else if rows < 3 || rows > 13
    p Error: Number of rows must be between 3 and 13.
  else if cols < 3 || cols > 13
    p Error: Number of columns must be between 3 and 13.
  else
    table#outer
      - for(let i = 0; i < rows; i++) {
        tr#middle
          - for(let j = 0; j < cols; j++) {
            td= i * i + j
          - }
      - }